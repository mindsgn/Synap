{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017",
      "dom"
    ],
    "outDir": "./build",
    "rootDir": "src",
    "strict": true,                  
    "noImplicitAny": false,    
    "strictPropertyInitialization": false,
    "baseUrl": "./",                 
    "esModuleInterop": true,            
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
    "uploads"
  ]
}
